<?xml version="1.0" encoding="utf-8"?>
<atguigu.com.mysjyy.view.Titalview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="#ff3097fd"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_topbanner_logo"
        android:layout_width="100dp"
        android:layout_height="30dp" />

    <TextView
        android:drawablePadding="5dp"
        android:textColor="@drawable/select_tv"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:text="全网搜索"
        android:drawableLeft="@drawable/select_sou"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:background="@drawable/select_sousuo"
        android:id="@+id/tv_sousuo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_name"
            android:drawableLeft="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignRight="@id/tv_name"
            android:src="@drawable/point_read"
            android:layout_width="6dp"
            android:layout_height="6dp" />
    </RelativeLayout>

    <ImageView
        android:layout_marginRight="8dp"
        android:id="@+id/jilu"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_topbanner_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</atguigu.com.mysjyy.view.Titalview>